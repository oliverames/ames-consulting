{
  "ci": {
    "collect": {
      "startServerCommand": "python3 -m http.server 4173",
      "url": [
        "http://127.0.0.1:4173/",
        "http://127.0.0.1:4173/blog/",
        "http://127.0.0.1:4173/portfolio/",
        "http://127.0.0.1:4173/contact/"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.8
          }
        ],
        "largest-contentful-paint": [
          "warn",
          {
            "maxNumericValue": 3000
          }
        ],
        "cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.1
          }
        ],
        "total-byte-weight": [
          "warn",
          {
            "maxNumericValue": 500000
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
